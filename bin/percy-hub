#!/usr/bin/env ruby

require 'percy/hub/raven'
require 'percy/hub'

Raven.capture do
  COMMANDS = %w[
    enqueue_jobs
    schedule_jobs
    reap_workers
    reap_locks
  ].freeze

  if ARGV.length != 1 || !COMMANDS.include?(ARGV[0])
    puts 'Usage:'
    puts '  percy-hub <command>'
    puts
    puts "  <command>: one of #{COMMANDS.join(', ')}"
    exit -1
  end

  Percy::Hub.new.run(command: ARGV[0])
end
